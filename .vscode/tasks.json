{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start All Services",
      "dependsOrder": "parallel",
      "dependsOn": ["pnpm dev", "convex dev", "ngrok tunnel"]
    },
    {
      "label": "pnpm dev",
      "type": "shell",
      "command": "pnpm dev",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "runOptions": {
        "runOn": "default"
      }
    },
    {
      "label": "convex dev",
      "type": "shell",
      "command": "pnpm convex dev",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "runOptions": {
        "runOn": "default"
      }
    },
    {
      "label": "ngrok tunnel",
      "type": "shell",
      "command": "ngrok http --url=gar-talented-egret.ngrok-free.app 3000",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "runOptions": {
        "runOn": "default"
      }
    }
  ]
}
